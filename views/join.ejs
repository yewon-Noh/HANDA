            }


          }
        }
      })

      // 이메일 중복확인 클릭시
      $('#email_ok').click(() => {

        if ($("#e_c").text() == "* 이메일 형식이 바르지 않습니다." || $("#email").val() == "") {

        } else {

          var _email = $('#email').val();
          $.ajax({
            async: false,
            url: '/join/email',
            type: 'post',
            data: { "email": _email },
            success: function (result) {

              if (result == '-1') {
                $('#e_c').text("* 이미 사용중인 이메일입니다.");
                $("#e_c").css("color", "red");
              }
              else if (result == '1') {
                $('#e_c').text("");
                $("#email_ok").attr("disabled", true)
              }

            },
            error: function (error) {

            },
            complete: function () {
            }
          })
        }
      })

      // 체크박스 값 변화시
      $('#ch1').change(() => {
        if ($('#ch1').is(':checked') == true) {
          $('#ch_c').text("");
        } else {
          $('#ch_c').text("* 체크해주세요.");
          $("#ch_c").css("color", "red");
        }
      })
    })
  </script>

<script src="/js/bootstrap/bootstrap.bundle.min.js"></script>

</body>

</html>