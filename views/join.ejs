    $(() => {
      // 회원가입 버튼 클릭시
      $('.submit').click(() => {
        var _name = $('#name').val();
        var _email = $('#email').val();
        var _pwd1 = $('#pwd1').val();
        var _pwd2 = $('#pwd2').val();

        var n_c = $('#n_c').text();
        var e_c = $('#e_c').text();
        var p1_c = $('#p1_c').text();

        
        if (n_c != "" || e_c != "" || p1_c != "") {

        } else {
          // check 메시지가 모두 없을 때
          
          if (_name == "" || _email == "" || _pwd1 == "" || $('#ch1').is(':checked') == false) {

            // 전체 입력 체크
            name_check();
            email_check();
            pwd_check();
            pw_rechek();

            if ($('#ch1').is(':checked') == true) {
              $('#ch_c').text("");
            } else {
              $('#ch_c').text("* 체크해주세요.");
              $("#ch_c").css("color", "red");
            }


          } else {
            // 정보가 모두 입력되었을 때
            
            if ($("#email_ok").prop("disabled") == true) {
              // 이메일 중복 확인을 했을 때

              if (_pwd1 != _pwd2) {

              } else {
                // 비밀번호가 일치할 때
                $.ajax({
                  url: '/join',
                  type: 'post',
                  data: { "name": _name, "email": _email, "pwd": _pwd1 },
