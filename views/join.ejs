                    if (result == "-1") {
                      throw console.error('회원가입 에러 발생');
                    }
                  },
                  error: function (error) {

                  },
                  complete: function (data) {
                    location.href = '/login';
                  }
                })

              }

            } else {
              $('#e_c').text("* 이메일 중복 확인을 해주세요.");
